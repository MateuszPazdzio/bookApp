        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LibraryQuantity)
            </td>
@*             <td>
                @Html.DisplayFor(modelItem => item.IsAvailable)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.IsTransferableToStore)
            </td>
