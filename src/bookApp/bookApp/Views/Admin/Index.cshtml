                <a asp-action="Edit" asp-controller="Admin" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-controller="Admin" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-controller="Admin" asp-route-id="@item.Id">Delete</a>
