@model IEnumerable<bookApp.Models.BookPosition>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-controller="Admin">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LibraryQuantity)
            </th>
@*             <th>
                @Html.DisplayNameFor(model => model.IsAvailable)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.IsTransferableToStore)
            </th>
